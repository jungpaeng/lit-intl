{
  "name": "@lit-intl/core",
  "version": "0.0.9",
  "sideEffects": false,
  "type": "module",
  "main": "./dist/index.min.cjs",
  "types": "./dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.min.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.min.cjs"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jungpaeng/lit-intl/tree/main/packages/core"
  },
  "author": "jungpaeng",
  "license": "MIT",
  "packageManager": "yarn@3.6.3",
  "workspaces": [
    "packages/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "react",
    "intl",
    "i18n",
    "internationalization",
    "localization",
    "translate",
    "translation",
    "format",
    "formatting"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "yarn clean && yarn build:js && yarn build:dts",
    "build:dts": "tsc -p tsconfig.build.json --emitDeclarationOnly",
    "build:js": "node esbuild.config.cjs",
    "test": "yarn vitest"
  },
  "dependencies": {
    "@formatjs/ecma402-abstract": "^1.17.2",
    "intl-messageformat": "^10.5.3"
  },
  "devDependencies": {
    "@testing-library/react": "^14.0.0",
    "@types/node": "^20.8.0",
    "@types/react": "^18.2.23",
    "esbuild": "^0.19.4",
    "esbuild-node-externals": "^1.9.0",
    "jsdom": "^22.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.5",
    "vitest": "^0.34.6"
  },
  "peerDependencies": {
    "react": "^18.0.0"
  }
}
