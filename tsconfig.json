{
  "compilerOptions": {
    "moduleResolution": "bundler",
    "target": "es6",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": ["node_modules/@types"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true
  },
  "exclude": ["packages/**/dist/*"]
}
